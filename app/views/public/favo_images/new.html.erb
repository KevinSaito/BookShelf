<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h3 class="text-dark bg-light py-4 mb-0">Post Place</h3>
      <div class="form-body p-4">
      <% if @favo_image.errors.any? %>
        <ul class="alert alert-danger" role="alert">
          <h6 class="alert-heading">
            <%= @favo_image.errors.count %>件のエラーが発生しました
          </h6>
          <% @favo_image.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
        <%= form_with model:@favo_image do |f| %>
          <%= f.file_field :image,accept: "image/*",class:"w-30" %>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
            </div>
            <%= f.text_field :location, placeholder:"スポット",class:"form-control" %>
          </div>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
            </div>
          <!--placeholder変えるか検討中-->
          <%= f.text_area :caption, rows:"3", placeholder:"好きな理由や、どんなタイミングで撮ったか教えてください。",class:"form-control" %>
          </div>
          
          <%= f.submit '投稿', class:"btn btn-lg btn-block btn-outline-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>