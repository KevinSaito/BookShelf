<!-- ユーザーの詳細 -->
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(70,70) %>
  <%= link_to "Edit Profile", edit_user_path(@user.id) %>
  <% if current_user != @user %>
    <% if current_user.following?(@user) %>
    <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete %>
    <% else %>
    <%= link_to 'フォローする', user_relationships_path(@user.id), method: :POST %>
    <% end %>
  <% end %>
    <%= link_to follows_user_path(@user) do %>
       <h6>フォロー<%= @following_users.count %></h6>
    <% end %>
    <%= link_to followers_user_path(@user) do %>
       <h6>フォロワー<%= @follower_users.count %></h6>
    <% end %>
</div>
<!--ここにいいね一覧を表示-->
<h2>いいね一覧</h2>
<% if @favorite_list.present? %>
  <% @favorite_list.each do |favo_image| %>
    <%= link_to favo_image_path(favo_image.id) do %>
    <%= image_tag favo_image.get_image(100,100) %>
    <%= favo_image.location %>
    <% end %>
  <% end %>
<% end %>


<!-- ユーザーの投稿一覧/編集-->
<h2>投稿一覧</h2>
<% @favo_images.each do |favo_image| %>
<div>
  <%= link_to edit_favo_image_path(favo_image.id) do %>
    <%= image_tag favo_image.get_image(200,200) %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag favo_image.user.get_profile_image(100,100) %></p>
  <p>場所：<%= favo_image.location %></p>
  <p>説明：<%= favo_image.caption %></p>
  <p>ユーザーネーム：<%= favo_image.user.name %></p>
  <p><%= link_to "#{favo_image.favo_comments.count} コメント", favo_image_path(favo_image.id) %></p>
</div>
<% end %>