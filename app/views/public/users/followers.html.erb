<div class = "text-center">
  <h3>フォロワー一覧</h3>
</div>
<div class="row justify-content-center">
<table>
  <% @users.each do |user| %>
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>投稿数</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(user.id) do %>
          <%= image_tag user.get_profile_image(50,50) %>
          <%= user.name %>
        <% end %>
      </td>
      <td><%= "#{user.favo_images.count} 投稿" %></td>
    </tr>
  </tbody>
  <% end %>
</table>
</div>
<%= paginate @users %>